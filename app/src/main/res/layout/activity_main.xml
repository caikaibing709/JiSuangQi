<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bcebf6"
    android:orientation="vertical"
    >
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="#fff"
        android:focusable="false"
        android:singleLine="true"
        android:text="000"
        android:textSize="60sp"

        />
    <TableRow  android:layout_weight="1"   android:layout_marginTop="10sp">
        <Button
            android:id="@+id/SZ_1"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            android:left="2dp"
            android:top="2dp"
            android:right="2dp"
            android:bottom="2dp"
            style="@android:style/Widget.ImageButton"
            />
        <Button
            android:id="@+id/SZ_2"
            android:text="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
        <Button
            android:id="@+id/SZ_3"
            android:text="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
        <Button
            android:id="@+id/FH_jia"
            android:text="+"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
    </TableRow>
    <TableRow  android:layout_weight="1" >
        <Button
            android:id="@+id/SZ_4"
            android:text="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
        <Button
            android:id="@+id/SZ_5"
            android:text="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
        <Button
            android:id="@+id/SZ_6"
            android:text="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
        <Button
            android:id="@+id/FH_jiang"
            android:text="-"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
    </TableRow>
    <TableRow  android:layout_weight="1"  >
        <Button
            android:id="@+id/SZ_7"
            android:text="7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
        <Button
            android:id="@+id/SZ_8"
            android:text="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
        <Button
            android:id="@+id/SZ_9"
            android:text="9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
        <Button
            android:id="@+id/FH_cheng"
            android:text="x"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
    </TableRow>
    <TableRow  android:layout_weight="2"  >
        <Button
            android:id="@+id/FH_C"
            android:text="c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            android:background="#ff4"
            style="@android:style/Widget.ImageButton"
            />
        <Button
            android:id="@+id/SZ_0"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
        <Button
            android:id="@+id/FH_Diang"
            android:text="."
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
        <Button
            android:id="@+id/FH_chu"
            android:text="/"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
        <Button
            android:id="@+id/FH_deng"
            android:text="="
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f00"
            android:background="#00B6fc"
            android:textSize="40sp"
            android:onClick="DianJi"
            style="@android:style/Widget.ImageButton"
            />
    </TableRow>

</TableLayout>
